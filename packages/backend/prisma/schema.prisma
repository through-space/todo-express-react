generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(255)
  description String?
  status      Status   @default(OPEN)
  created_at  DateTime @default(now())
  updated_at  DateTime
}

enum Status {
  OPEN
  IN_PROGRESS
  DONE
}
