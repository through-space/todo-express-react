{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@ui-components/*": [
        "src/ui-components/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@config/*": [
        "src/config/*"
      ]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "node16",
    "moduleResolution": "bundler"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src"
  ]
}

